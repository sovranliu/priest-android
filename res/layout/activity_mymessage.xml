<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/mymassage_layout_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        android:focusable="true"
        android:focusableInTouchMode="true">
		<ImageButton
            android:id="@+id/mymessage_button_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:background="@drawable/arrow_left_white_wide" />
        <TextView
            android:id="@+id/mymessage_label_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="我的消息"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/mymessage_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/mymassage_layout_header"
        android:background="@color/white"
        android:divider="@drawable/divider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mymessage_list"
        android:background="@drawable/divider"/>
</RelativeLayout>
